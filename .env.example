# Summeets Configuration
# Copy this file to .env and fill in your API keys

# LLM Provider Configuration
LLM_PROVIDER=openai                 # openai or anthropic
LLM_MODEL=gpt-4o-mini               # Model name (use exact IDs for Anthropic)

# API Keys (at least one required)
OPENAI_API_KEY=sk-...               # OpenAI API key for GPT models
ANTHROPIC_API_KEY=sk-ant-...        # Anthropic API key for Claude models  
REPLICATE_API_TOKEN=r8_...          # Replicate token for transcription

# Summarization Settings
SUMMARY_MAX_OUTPUT_TOKENS=3000      # Maximum tokens per summary
SUMMARY_CHUNK_SECONDS=1800          # Chunk size in seconds (30 minutes)
SUMMARY_COD_PASSES=2                # Chain-of-Density refinement passes
SUMMARY_TEMPLATE=default            # default|sop|decision|brainstorm
SUMMARY_AUTO_DETECT_TEMPLATE=true   # Auto-detect template from content

# Audio Processing (optional)
MAX_UPLOAD_MB=24                    # Audio compression target size
# FFMPEG_BIN=ffmpeg                 # Custom ffmpeg path
# FFPROBE_BIN=ffprobe               # Custom ffprobe path

# Advanced Settings (rarely need to change)
# OUT_DIR=out                       # Output directory