# ============================================================
# Summeets Configuration
# Copy this file to .env and fill in your values.
# ============================================================

# --- LLM Provider ---
# Which provider to use: "openai" or "anthropic"
LLM_PROVIDER=anthropic
# Model identifier (e.g. gpt-4o-mini, claude-3-5-sonnet-20241022)
LLM_MODEL=claude-3-5-sonnet-20241022

# --- API Keys (at least one LLM key + Replicate required) ---
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
REPLICATE_API_TOKEN=

# --- Tokenization / Context ---
# Max context window tokens for the chosen model
LLM_CONTEXT_WINDOW=128000
# Safety margin subtracted from context window
LLM_TOKEN_SAFETY_MARGIN=512
# Tiktoken encoding name for OpenAI models
OPENAI_TIKTOKEN_ENCODING=o200k_base

# --- Summarization ---
# Maximum output tokens for summaries
SUMMARY_MAX_OUTPUT_TOKENS=3000
# Chunk length in seconds for map-reduce splitting
SUMMARY_CHUNK_SECONDS=1800
# Number of Chain-of-Density passes
SUMMARY_COD_PASSES=2
# Default template: default, sop, decision, brainstorm, requirements
SUMMARY_TEMPLATE=default
# Auto-detect meeting type from transcript content
SUMMARY_AUTO_DETECT_TEMPLATE=true

# --- Extended Thinking (Anthropic) ---
THINKING_BUDGET_DEFAULT=4000
THINKING_BUDGET_EXTENDED=6000

# --- Audio Processing ---
# Max upload size in MB (Replicate limit)
MAX_UPLOAD_MB=24.0
# Audio quality bitrates
AUDIO_HIGH_BITRATE=192k
AUDIO_MEDIUM_BITRATE=128k
AUDIO_LOW_BITRATE=64k

# --- Environment ---
# "development" or "production" (production reduces console log verbosity)
ENVIRONMENT=development
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# --- Job Management ---
MAX_CONCURRENT_JOBS=3
JOB_HISTORY_DAYS=30
TEMP_CLEANUP_HOURS=24
